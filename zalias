
#alias 
alias k='kubectl'
alias dk='docker'
alias dkexec='docker exec -it'
alias dp='docker ps'
alias km8='k  --kubeconfig ~/.kube/m800-config '
alias cobra='~/go/bin/cobra-cli'
# alias dlv='~/go/  bin/dlv'
alias py='python3'
